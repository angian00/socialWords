extend layout

block variables
	- var splash = true
	- var splash = true

block page-content
	.container
		ul.nav.nav-pills.navbar-right
			li.active
				a(href='/login') Log in
			li
				a(href='/register') Register

		.row
			.inner
				//img(src='/images/logo.png', width='240')
				h1 Social Words
				p.lead A minimalist Social Network

			//form.form-signin(action=isLogin ? '/userHome' : 'confirmRegistration')
			form.form-signin(role='form', ng-controller='LoginCtrl')
				if !isLogin
					label(for='inputUsername').sr-only nickname
					input(type='text', placeholder='nickname', required)#inputUsername.form-control

				.alert.alert-danger(ng-show="error")
					| {{error}}
				label(for='inputEmail').sr-only email address
				input(type='email', placeholder='email address', required, autofocus, ng-model='email')#inputEmail.form-control
				label(for='inputPassword').sr-only password
				input(type='password', placeholder='password', required, ng-model='password')#inputPassword.form-control
				//if isLogin
					//.checkbox
					//	label
					//		input(type='checkbox', value='remember-me')
					//		| Remember me

				button.btn.btn-lg.btn-primary.btn-block(type='button', ng-click='login()')= isLogin ? 'Sign in' : 'Register'

				img(ng-if="dataLoading", src="data:image/gif;base64,")